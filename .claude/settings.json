{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Write(docs/**)",
      "Write(*.md)",
      "Write(*.mdx)",
      "Write(*.rst)",
      "Edit",
      "Read",
      "Skill",
      "Bash",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Write(src/**)",
      "Write(tests/**)",
      "Write(*.py)",
      "Write(*.yml)",
      "Write(*.yaml)",
      "Write(*.json)",
      "Write(*.toml)"
    ]
  },
  "defaultMode": "acceptEdits"
}
